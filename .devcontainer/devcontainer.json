{
  "name": "Mkdocs",
  "image": "mcr.microsoft.com/devcontainers/python:3.11",
  "forwardPorts": [8000],
  "postCreateCommand": "pip install -r requirements-dev.txt",
  "postStartCommand": "mkdocs serve",
  "customizations": {
    "vscode": {
      "extensions": [
        "davidanson.vscode-markdownlint",
        "streetsidesoftware.code-spell-checker"
      ]
    }
  }
}
